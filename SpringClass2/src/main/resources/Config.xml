<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
	<bean  id="stdObj" class="BeanPack.Student">
		<property name="rollno"  value="1001" />
		<property name="sname"  value="Ramesh" />
		<property name="course"  value="Java" />
		<property name="fees"  value="12000.00" />
	</bean>
	
	<bean  id="empObj"  class="BeanPack.Employee">
		<constructor-arg name="empno"  value="101" />
		<constructor-arg name="ename"  value="Pravasthi" />
	</bean>
	
</beans>